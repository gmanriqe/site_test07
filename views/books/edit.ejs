<% include ../partials/header %>
<% include ../partials/menu %>

<div class="container">
    <h1>Editar - <%= book.title %></h1>
    <form action="/book/<%=book.id%>?_method=PUT" method="POST">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="title">Titulo</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <input type="text" name="title" value="<%= book.title%>" id="title" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="description">Descripción</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <textarea name="description" id="description" class="form-control" cols="30" rows="10" required><%= book.description%></textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="page">Paginas</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <input type="number" name="page" value="<%= book.page%>" id="page" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-md-2">
                    <label for="publishedAd">Fecha Publicación</label>
                </div>
                <div class="col-xd-8 col-md-10">
                    <input type="date" name="publishedAd" value="<%= book.publishedAd%>" id="publishedAd" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="form-group text-right">
            <input type="submit" class="btn btn-success" value="Guardar">
        </div>
    </form>
</div>